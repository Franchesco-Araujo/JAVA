<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>B2B Product Card</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property 
                name="source" 
                type="String" 
                label="Image Source" 
                description="Selecciona una opción: CMS o URL" 
                datasource="CMS, URL" 
                required="true" 
            />
            <property 
                name="contentId" 
                type="ContentReference" 
                label="CMS Image" 
            />
            <property 
                name="urlImage" 
                type="String" 
                label="External URL Image" 
                description="Ingrese la URL de la imagen" 
            />
            <property 
                name="alternativeText" 
                type="String" 
                label="Alternative Image Text" 
                description="Ingrese el texto alternativo" 
                default="Productos Destacados" 
            />
            <property 
                name="title" 
                type="String" 
                label="Title" 
                default="Productos Destacados" 
            />
            <property 
                name="description" 
                type="String" 
                label="Description" 
                default="CONOCE LO DESTACADO DE ESTA SEMANA" 
            />
            <property 
                name="buttonLabel" 
                type="String" 
                label="Button Label" 
                default="Ver más" 
            />
            <property 
                name="redirectUrl" 
                type="String" 
                label="External URL" 
                description="External URL to redirect" 
            />
            <property 
                name="desktopHeight" 
                type="String" 
                default="400px" 
                label="Desktop Height" 
                description="Component height (desktop)" 
            />
            <property 
                name="desktopWidth" 
                type="String" 
                default="200px" 
                label="Desktop Width" 
                description="Component Width (desktop)" 
            />
            <property 
                name="mobileHeight" 
                type="String" 
                default="180px" 
                label="Mobile Height" 
                description="Component height (mobile)" 
            />
            <property 
                name="mobileWidth" 
                type="String" 
                default="90px" 
                label="Mobile Width" 
                description="Component Width (mobile)" 
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>